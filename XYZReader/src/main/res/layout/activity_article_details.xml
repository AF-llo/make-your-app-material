<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.xyzreader.R.drawable"/>
        <variable
            name="fragmentManager"
            type="android.support.v4.app.FragmentManager"/>
        <variable
            name="detailsActivity"
            type="com.example.xyzreader.ui.activities.DetailsActivity"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/article_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fragmentManager="@{fragmentManager}"
            app:items="@{detailsActivity.mArticles}"
            app:adapter='@{"com.example.xyzreader.ui.adapter.ArticlesFragmentAdapter"}'/>

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:homeIcon="@{drawable.ic_arrow_back}"/>

        </android.support.design.widget.AppBarLayout>
    </FrameLayout>
</layout>
